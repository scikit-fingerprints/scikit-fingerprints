[flake8]
max-line-length = 120
exclude = .git,__pycache__,old,build,dist
ignore = E203, E266, E731, W503, F403
max-complexity = 18
select = B,C,E,F,W,T4,B9

per-file-ignores =
    benchmarking/fp_tuning.py:C901
    # ignore "unused import" errors in __init__.py, flake8 is wrong there
    skfp/*/__init__.py:F401
